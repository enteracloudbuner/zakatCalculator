<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient1">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/corner"
            android:text="@string/assets_for_zakat"
            android:textSize="30sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gold"
                android:inputType="number"
                android:hint="curent Gold Price/موجودہ سونا کی قیمت" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/silver"
                android:inputType="number"
                android:hint="current Silver Price/موجودہ چاندی کی قیمت" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/land"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="land or home for sale/بیجنے کی نیت سے لی گئ مکان"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Bank_Balance"
                android:inputType="number"
                android:hint="Bank Balance/بینک میں جمع شدہ رقم" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loan_given"
                android:inputType="number"
                android:hint="Loan given to others/ادھار دی گئ رقم مال " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currency"
                android:inputType="number"
                android:hint="Forign Currency in current rate/غیر ملکی کرنسی کی موجودہ ریت " />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bonds"
                android:inputType="number"
                android:hint="currency in Bonds/بانڈ کی صورت میں رقم " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shares"
                android:inputType="number"
                android:hint="Shares in market/شیئرز کی صورت میں رقم " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saving_certificate"
                android:inputType="number"
                android:hint="Saving Certificat if any/بچت سرٹیفکیٹ  " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bc"
                android:inputType="number"
                android:hint="Amount revied in draw/ بی سی سے حاصل رقم " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/borrow"
                android:inputType="number"
                android:hint="Amount given borrwo/امانت میں رکھی گئ رقم " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/raw_material"
                android:inputType="number"
                android:hint="Raw material value in shop/facotory/خام مال کی مالیت فیکٹری یا دکان " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ready_stock"
                android:inputType="number"
                android:hint="ready stock rate in shop/factory/تیار مال کی قیمت دکان یا فیکٹری میں " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instalments"
                android:inputType="number"
                android:hint="installment paid in flate/land/ فلیٹ یا مکان خریدنے میں دیے گیے اقساط " />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/partnership"
                android:inputType="number"
                android:hint="amount in buisness partnership/ کاروبار میں شراکت قابل زکوہ اثاثوں کی مالیت " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/others"
                android:inputType="number"
                android:hint="others if any/دیگر اگر کچھ یے  " />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/corner"
            android:text="Amount to be subtracted/وہ رقم جو کم کرنی ہے"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loan_taken"
                android:inputType="number"
                android:hint="loan taken/اگر قرض لیا ہوا ہے  " />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/utility_bills"
                android:inputType="number"
                android:hint="Utility Bill to be paid/یوٹیلیٹی بلز بجلی گیس وغیرہ جو ادا کرنے ہے  " />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/draw_remaining"
                android:inputType="number"
                android:hint="Amount to be paid in Draw/بی سی کمیٹی کے بقایا(جب کمیٹی مل چکی ہو  " />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/salaries"
                android:inputType="number"
                android:hint="Servants Salaries/ملازمین کی تنخواہیں  " />

        </com.google.android.material.textfield.TextInputLayout>

<Button
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:text="Calculate"
    android:background="@drawable/roundbtn"
    android:layout_gravity="center"
    android:id="@+id/add"/>



    </LinearLayout>









</LinearLayout>






</ScrollView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_margin="10dp">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_colorNormal="#FFFFFF"
        app:fab_colorPressed="#FFAA11"
        android:id="@+id/clear_text"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>



</LinearLayout>

</RelativeLayout>